---
import Layout from '../layouts/Layout.astro';
import ExpandedContent from '../components/ExpandedContent.svelte';
import Button from '../components/Button.svelte';
---

<Layout title="Welcome to Astro.">

	<main class="lg:grid w-full h-full grid-cols-2">
		<div class="flex-grow  p-4 md:p-6 lg:p-16 leftz bg-darkBlue text-xl text-white ">
			<img src="/Mercado_Logo_White+Yellow.png" class="w-full max-w-[7.5rem]" alt="Mercado Logo">
			<div class="space-y-10 mt-20 max-w-2xl">
				<h2 class="text-4xl font-bold">Calculate your fast track savings with Mercado.</h2>
				<p class="">Find out what you can save with the power of Mercado’s digital, networked, and automated import order management platform.</p>
				<p class="max-w-3xl">Find out what you can save with the power of Mercado’s digital, networked, and automated import order management platform.</p>
				
					<div class="flex gap-2 md:max-w-[66%]">
						<Button link={'/demo'}>Book a demo</Button>
						<Button link={'/my-roi'} iswhite={true}>Get your full ROI</Button>
					</div>
				
				
				
				</div>
			</div>
			<div class="p-2 bg-center bg-no-repeat bg-cover col-span-1p-4 rightz bg-extended-header">
				
			
				<ExpandedContent  client:load client:only />
			</div>

		</div>
	</main>

</Layout>

